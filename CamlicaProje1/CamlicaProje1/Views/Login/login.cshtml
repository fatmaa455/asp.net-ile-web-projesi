

@{
    ViewBag.Title = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

    <link href="~/Content/css/stil.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

   <div class="container">

       <div class="row justify-content-center">

               <div class="card o-hidden border-0 shadow-lg my-5">

                       <div class="row">

                           <div class="col-lg-6 d-none d-lg-block">
                               <img src="~/Content/img/login2.jpg" height="100%" width="100%"/>
                           </div>

                           <div class="col-lg-6">
                               <div class="p-5">

                                   <div class="text-center">
                                       <h1 class="h4 text-gray-900 mb-4">Tekrar Hoşgeldin!</h1>
                                   </div>

                                   @ViewBag.Mesaj

                                   <form class="row g-3" method="post" action="/Login/login/" novalidate>

                                       <div class="col-12">
                                           <label for="kullaniciAdi" class="form-label">Kullanıcı Adı</label>
                                           <div class="input-group has-validation">
                                               <input type="text" name="kullaniciAdi" class="form-control" id="kullaniciAdi" required>
                                           </div>
                                       </div>

                                       <div class="col-12" style="margin-bottom:20px;">
                                           <label for="sifre" class="form-label">Şifre</label>
                                           <br>
                                           <input type="password" name="sifre" class="form-control" id="sifre" required>
                                       </div>


                                       <div class="col-12">
                                           <div>
                                               <button class="btn btn-primary w-100" type="submit">Giriş Yap</button>
                                           </div>
                                       </div>

                                   </form>

                                   <hr>

                                   <div class="text-center">
                                       <a class="small" href="/Register/register/">Yeni bir hesap oluştur !</a>
                                   </div>

                               </div>
                           </div>
                       </div>
   
               </div>
          
       </div>
    </div>

</body>
</html>