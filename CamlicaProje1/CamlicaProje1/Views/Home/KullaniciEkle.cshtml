

@using CamlicaProje1.Models
@model kullaniciBilgileri

@{
    ViewBag.Title = "Kullanıcı Ekle";
}

<h2>Kullanıcı Ekleme Sayfası</h2>

<form action="/Home/KullaniciEkle" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <input type="hidden" class="form-control" value="@Model.kullaniciId" id="kullaniciId" name="kullaniciId">
    </div>

    <div class="form-group">
        <label for="ad">Ad: </label>
        <input type="text" class="form-control" value="@Model.ad" id="ad" name="ad">
    </div>

    <div class="form-group">
        <label for="soyad">Soyad: </label>
        <input type="text" class="form-control" value="@Model.soyad" id="soyad" name="soyad">
    </div>

    <div class="form-group">
        <label for="kullaniciAdi">Kullanıcı Adı: </label>
        <input type="text" class="form-control" value="@Model.kullaniciAdi" id="kullaniciAdi" name="kullaniciAdi">
    </div>

    <div class="form-group">
        <label for="sifre">Şifre: </label>
        <input type="text" class="form-control" value="@Model.sifre" id="sifre" name="sifre">
    </div>

    <div class="form-group">
        <label for="email">Email: </label>
        <input type="text" class="form-control" value="@Model.email" id="email" name="email">
    </div>

    <div class="form-group form-check">
    </div>
    <button type="submit" class="btn btn-primary">Kullanıcı Ekle</button>

    <a class="btn btn-info" href="/Home/Index">Vazgeç</a>

</form>


